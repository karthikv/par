#!/bin/bash
set -euo pipefail
IFS=$'\n\t'

PAR_PATH="bin/par"
OLD_PAR_PATH="bin/par-saved"

print_help() {
  echo "Usage: $0 [start|stop|finish]"
}

if [ $# -ne 1 ]; then
  print_help
  exit 1
fi

if [ "$1" == "start" ]; then
  echo "Compiling new par..."
  bin/par -o ebin src/parser.par
  bin/parse_utils
  rebar3 as escript escriptize

  mv "$PAR_PATH" "$OLD_PAR_PATH"
  mv _build/escript/bin/par "$PAR_PATH"
  echo "Done"
elif [ "$1" == "stop" ]; then
  if [ -f $OLD_PAR_PATH ]; then
    echo -n "Reverting to old par... "
    mv "$OLD_PAR_PATH" "$PAR_PATH"
    echo "done"
  else
    echo "Not bootstrapped"
  fi
elif [ "$1" == "finish" ]; then
  if [ -f $OLD_PAR_PATH ]; then
    bin/par -o ebin src/parser.par
    bin/parse_utils
    set +e
    rebar3 eunit
    succeeded=$?
    set -e

    if [ $succeeded -eq 0 ]; then
      echo "Success!"
      rm "$OLD_PAR_PATH"
    else
      echo -n "Failed; still bootstrapped."
      exit 1
    fi
  else
    echo "Not bootstrapped"
  fi
else
  print_help
  exit 1
fi
