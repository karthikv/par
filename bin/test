#!/bin/bash
set -euo pipefail
IFS=$'\n\t'

# We compile the parser with the current par, so it runs with the old, working
# stdlibs. Then, we precompile the new stdlibs so all tests can run against it.
bin/par -o ebin --with-stdlib src/parser.par
bin/precompile

if [ $# -eq 0 ]; then
  rebar3 eunit
elif [ $# -eq 1 ]; then
  rebar3 eunit --module "${1}_test"
elif [ $# -eq 2 ] && [ "$2" = "update" ]; then
  rm test/golden/reporter-*
  ERL_FLAGS="-update" rebar3 eunit --module "${1}_test"
else
  rebar3 eunit "$@"
fi
