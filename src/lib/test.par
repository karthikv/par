module Test

import Base (Option, variants Option)

exception Fail(String)

// EUnit treats an array of tests as a test.
group : [Test] -> Test
export group(tests) = assume tests

capture : (() -> A) -> Exception
export capture(cb) =
  let result = try
    cb()
    None
  catch { e => Some(e) }

  if let Some(e) = result then
    e
  else
    raise Fail("no exception raised")

ok : Assertion
export ok = assume @ok
