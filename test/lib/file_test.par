stat_test : Test
stat_test = group([
  // @example
  test
    let meta = stat("test/lib/file/foo.txt")
    // ^ Assuming a file located at test/lib/file/foo.txt exists with the
    // contents "hello" and 0644 permissions, the following should pass:

    assert meta.size == 6
    assert meta.type == Regular
    assert meta.mode == Mode {
      owner = AllowReadWrite
      group = AllowRead
      other = AllowRead
    }

  test
    let meta = stat("test/lib/file/bar")
    assert meta.type == Directory
    assert meta.mode == Mode {
      owner = AllowAll
      group = AllowReadExec
      other = AllowReadExec
    }

  // Symlinks are resolved.
  test
    let meta = stat("test/lib/file/bar/baz")
    assert meta.type == Regular
    assert meta.mode == Mode {
      owner = AllowReadWrite
      group = AllowRead
      other = AllowRead
    }

  test assert capture(|-| stat("asdf")) == DoesntExist
])

lstat_test : Test
lstat_test = group([
  test
    let meta = lstat("test/lib/file/foo.txt")
    assert meta.size == 6
    assert meta.type == Regular
    assert meta.mode == Mode {
      owner = AllowReadWrite
      group = AllowRead
      other = AllowRead
    }

  test
    let meta = lstat("test/lib/file/bar")
    assert meta.type == Directory
    assert meta.mode == Mode {
      owner = AllowAll
      group = AllowReadExec
      other = AllowReadExec
    }

  // Symlinks aren't resolved.
  // @example
  test
    let meta = lstat("test/lib/file/bar/baz")
    // ^ Assuming a symlink exists at test/lib/file/bar/baz with 0755
    // permissions, the following should pass:

    assert meta.type == Symlink
    assert meta.mode == Mode {
      owner = AllowAll
      group = AllowReadExec
      other = AllowReadExec
    }

  test assert capture(|-| lstat("asdf")) == DoesntExist
])

open_test : Test
open_test = group([
  // @example
  test
    let h = open(write_temp("hey\nthere"), Read)
    ensure close(h) after
      assert read(h, All) == "hey\nthere"

  test
    let path = write_temp("hey\nthere")
    let h = open(path, Append)
    assert read_path(path) == "hey\nthere"

    ensure close(h) after
      write(h, "where")
    assert read_path(path) == "hey\ntherewhere"

  test
    let path = write_temp("hey\nthere")
    let h = open(path, ReadWrite)
    assert read_path(path) == "hey\nthere"

    ensure close(h) after
      assert read(h, Chars(3)) == "hey"
      write(h, "where")
      assert read(h, All) == "e"
    assert read_path(path) == "heywheree"

  test assert capture(|-| open(write_temp(""), Exclusive)) == Exists

  test
    let new_path = Path.join(make_temp_dir(), "new")
    let h = open(new_path, Exclusive)
    ensure close(h) after write(h, "hey\nthere")
    assert read_path(new_path) == "hey\nthere"
])

