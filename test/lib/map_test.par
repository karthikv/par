module MapTest

import Map (*)
import Test (group, capture)

get_or_test : Test
get_or_test = group([
  test assert get_or({ @hi => 'h' }, @hi, 'i') == 'h'
  test assert get_or({ "bar" => 3.7, "baz" => 1 }, "foo", 5.02) == 5.02
  test assert get_or({}, true, [false]) == [false]
])

keys_test : Test
keys_test = group([
  test assert keys({ @hi => 'h' }) == [@hi]
  test
    let ks = keys({ "bar" => 3.7, "baz" => 1 })
    // order is undefined
    assert ks == ["bar", "baz"] || ks == ["baz", "bar"]
  test assert keys({}) == []
])

values_test : Test
values_test = group([
  test assert values({ @hi => 'h' }) == ['h']
  test
    let vs = values({ "bar" => 3.7, "baz" => 1 })
    // order is undefined
    assert vs == [3.7, 1] || vs == [1, 3.7]
  test assert values({}) == []
])

update_test : Test
update_test = group([
  test assert update({ @hi => 'h' }, @hi, |ch| to_int(ch) + 1 |> to_char) ==
    { @hi => 'i' }
  test
    let cb() = update({ "bar" => 3.7, "baz" => 1 }, "foo", |a| a * 2)
    assert capture(cb) == BadKey
  test assert update({ "bar" => 3.7, "baz" => 1 }, "bar", |a| a * 2) ==
    { "bar" => 7.4, "baz" => 1 }
  test assert capture(|-| update({}, true, |v| v)) == BadKey
])

upsert_test : Test
upsert_test = group([
  test
    let cb = |ch| to_int(ch) + 1 |> to_char
    assert upsert({ @hi => 'h' }, @hi, 'a', cb) == { @hi => 'i' }
  test assert upsert({ "bar" => 3.7, "baz" => 1 }, "foo", 0, |a| a * 2) ==
    { "foo" => 0, "bar" => 3.7, "baz" => 1 }
  test assert upsert({ "bar" => 3.7, "baz" => 1 }, "bar", 0, |a| a * 2) ==
    { "bar" => 7.4, "baz" => 1 }
  test assert upsert({}, true, false, |v| v) == { true => false }
])

merge_test : Test
merge_test = group([
  test assert merge({ @hi => 'i', @hey => 'y' }, { @hi => 'h' }) ==
    { @hi => 'h', @hey => 'y' }
  test assert merge({ @hi => 'h' }, { @hi => 'i', @hey => 'y' }) ==
    { @hi => 'i', @hey => 'y' }
  test assert merge({ "foo" => 7.5 }, { "bar" => 3.7, "baz" => 1 }) ==
    { "foo" => 7.5, "bar" => 3.7, "baz" => 1 }
  test assert merge({ true => @true, false => @false }, {}) ==
    { true => @true, false => @false }
  test assert merge({}, {}) == {}
])

with_test : Test
with_test = group([
  test assert with({ @hi => 'h' }, [@hi]) == { @hi => 'h' }
  test assert with({ @hi => 'h' }, []) == {}
  test assert with({ "bar" => 3.7, "baz" => 1 }, ["foo"]) == {}
  test assert with({ "bar" => 3.7, "baz" => 1 }, ["foo", "bar"]) ==
    { "bar" => 3.7 }
  test assert with({ "bar" => 3.7, "baz" => 1 }, ["baz", "foo", "bar"]) ==
    { "bar" => 3.7, "baz" => 1 }
  test assert with({}, [true]) == {}
  test assert with({}, []) == {}
])

without_test : Test
without_test = group([
  test assert without({ @hi => 'h' }, [@hi]) == {}
  test assert without({ @hi => 'h' }, []) == { @hi => 'h' }
  test assert without({ "bar" => 3.7, "baz" => 1 }, ["foo"]) ==
    { "bar" => 3.7, "baz" => 1 }
  test assert without({ "bar" => 3.7, "baz" => 1 }, ["foo", "bar"]) ==
    { "baz" => 1 }
  test assert without({ "bar" => 3.7, "baz" => 1 }, ["baz", "foo", "bar"]) == {}
  test assert without({}, [true]) == {}
  test assert without({}, []) == {}
])
